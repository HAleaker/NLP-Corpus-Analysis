<tal:def tal:define="title title|field.title;
  description description|field.description;
  errormsg errormsg|field.errormsg;
  item_template item_template|field.widget.item_template;
  panel_status job_status == 'OK' and 'panel-success' or 'panel-danger';
  "
  i18n:domain="deform">

  <div
    class="panel ${panel_status} collapsed-form phrase-component-form"
    title="${description}">
    <div class="panel-heading">
      <strong>${title}</strong>
      <div class="btn-toolbar pull-right" role="toolbar">
        <div class="btn-group">
          <input
             type="hidden"
             class="_phash_id"
             name="phash-${field.schema.name}"
             value="${phash_id}" />

             <!-- style="display:none" -->
          <button
             name="preview"
             title="Reload"
             class="button-reload btn btn-sm btn-warning disabled">
            <span class="glyphicon glyphicon-repeat glyph-spinner"></span>
          </button>

        </div>

        <div class="btn-group">
          <button
            name="move_up_${field.schema.name}_success"
            title="Move up this pipeline component"
            class="btn btn-sm btn-default">
            <span class="glyphicon glyphicon-arrow-up"></span>
          </button>
          <button
            name="move_down_${field.schema.name}_success"
            title="Move down this pipeline component"
            class="btn btn-sm btn-default">
            <span class="glyphicon glyphicon-arrow-down"></span>
          </button>
          <button
            name="remove_${field.schema.name}_success"
            title="Remove this pipeline component"
       